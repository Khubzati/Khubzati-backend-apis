NODE_ENV=development
APP_PORT=3000

# DB credentials
DB_USERNAME=
DB_PASSWORD=
DB_NAME=
DB_HOST=
DB_PORT=
DATABASE_URL=
DIRECT_URL=

# jwt info
JWT_SECRET=
JWT_SECRET_KEY=
JWT_EXPIRES_IN=

# admin info
ADMIN_EMAIL=
ADMIN_PASSWORD=

# SMS Configuration (Twilio - Recommended)
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Firebase Admin SDK Configuration
# Choose ONE of the two methods below:

# Method 1: JSON File Path (RECOMMENDED for local development)
# Download service account JSON from Firebase Console and place it in your project
# Then set the path relative to project root or absolute path
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json

# Method 2: Environment Variables (For production/CI/CD)
# Extract values from service account JSON file
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Supabase Configuration (Optional - for Next.js app features)
# Get these from https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
